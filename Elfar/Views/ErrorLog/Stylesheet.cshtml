a { color: #CCCCCC; text-decoration: none; }
a[href] { color: #0033CC; }
a[href]:visited { color: Navy; }
a[href]:hover { color: #FF6600; }

body { font-family: Verdana; font-size: 70%; background-color: #fff; }

h1 { font-family: Verdana; font-weight: normal; color: #0A6CCE; font-size: 175%; }

img { border: none; }

pre, code { font-family: "Courier New" ,Courier; }

table { width: 100%; border-collapse: collapse; }
td { border: solid 1px silver; padding: 0.4em; vertical-align: top; }
th { text-align: left; background-color: #0A6CCE; padding: 0.4em; color: White; vertical-align: top; border: solid 1px silver; }

#error-type,
#error-message { display: block; }

#navigation { margin: 0; list-style-type: none; text-transform: uppercase; font-size: 80%; padding: 0.25em 0; color: #fff; background-color: #aaa; border-top: solid 1px #aaa; border-bottom: solid 1px #aaa; }
#navigation a { text-decoration: none; padding: 0.25em 1em; border: solid 1px #aaa; border-right: solid 1px #fff; color: #fff; }
#navigation a:hover { background-color: #fff; color: #444; border: solid 1px #aaa; }
#navigation li { display: inline; }

#separator { display: none; }

#sizes { float: right; }

#stack-trace { font-size: 110%; background-color: #ffffcc; padding: 1em; width: 97.9%; }
#stack-trace .type { color: #00008B; }
#stack-trace .name { color: #666; }
#stack-trace .method { color: #008B8B; font-weight: bolder; }
#stack-trace .file,
#stack-trace .line { color: #8B008B; }

#title { font-weight: bold; font-size: 120%; }

.code-col,
.date-col,
.time-col { text-align: right; }

.key-col,
.type-col { font-weight: bold; }

.odd-row { background-color: #e9e9e9; }

.table-caption { background-color: navy; margin: 0; color: white; padding: 0.4em; font-weight: bold; }

@@media screen {
    #stack-trace { overflow: scroll; }
    .scroll-view { width: 100%; overflow: scroll; }
}
@@media print {
    #navigation { display: none; }
}