@model Elfar.Collection
@if(Model.Count != 0)
{
    <table cellspacing="0">
        <thead>
            <tr>
                <th style="width: 20%;">Name</th>
                <th style="width: 80%;">Value</th>
            </tr>
        </thead>
        <tbody>
            @{ var i = 0; }
            @foreach(var key in Model.Keys)
            {
                <tr class="@(i++ % 2 == 0 ? "odd" : "even")">
                    <td class="key-col">@key</td>
                    <td>@Model[key]</td>
                </tr>
            }
        </tbody>
    </table>
}