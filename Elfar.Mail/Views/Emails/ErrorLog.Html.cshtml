@model dynamic
Content-Type: text/html

<html>
	<head>
		<title>@Model.Subject</title>
		<style type="text/css">
            body { font-family: verdana, arial, helvetic; font-size: x-small; } 
            td, th, pre { font-size: x-small; } 
            #errorDetail { padding: 1em; background-color: #FFFFCC; } 
            #errorMessage { font-size: medium; font-style: italic; color: maroon; }
            h1 { font-size: small; }
        </style>
	</head>
	<body>
		<p id="errorMessage">@Model.Subject</p>
    @if (Model.Time > DateTime.MinValue)
    {
        <p>Generated: @Model.Time.ToString("r")</p>
    }
        <p>@Model.Source</p>
        <pre id="errorDetail">
@Model.StackTrace
        </pre>
		<p id="Footer">
            Powered by Error Logging Filter and Route (ELFAR) for ASP.NET MVC, Copyright &#169; 2012, Steven Bey. All rights reserved.
            Licensed under <a href="http://www.apache.org/licenses/LICENSE-2.0">Apache License, Version 2.0</a>.
        </p>
	</body>
</html>