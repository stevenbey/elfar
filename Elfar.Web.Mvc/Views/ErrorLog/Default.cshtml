<!DOCTYPE html>
<html>
<head>
    <title>Error Logging Filter and Route</title>
    @if (Request.IsLocal)
    {
        <link type="text/css" rel="stylesheet" href="/Content/bootstrap.min.css" />
    }
    else
    {
        <link type="text/css" rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" />
    }
    @*<link type="text/css" rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">*@
    <link type="text/css" rel="stylesheet" href="@Url.Action("styles")">
</head>
<body>
    <main>
        @Html.Partial("Header")
        <div id="content"></div>
        @Html.Partial("Footer")
        <div id="details"></div>
        <div id="html"></div>
    </main>
    @if (Request.IsLocal)
    {
        <script src="/Scripts/jquery-2.1.3.min.js"></script>
        <script src="/Scripts/bootstrap.min.js"></script>
        <script src="/Scripts/knockout-3.3.0.js"></script>
        <script src="/Scripts/highcharts.js"></script>
        <script src="/Scripts/linq.min.js"></script>
    }
    else
    {
        <script src="https://code.jquery.com/jquery-1.11.2.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
        <script src="http://knockoutjs.com/downloads/knockout-3.2.0.js"></script>
        <script src="http://code.highcharts.com/highcharts.js"></script>
        <script src="https://rawgit.com/stevenbey/linq.js/master/linq.js"></script>
    }
    <script src="@Url.Action("script")"></script>
</body>
</html>